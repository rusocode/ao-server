<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <property name="pattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %logger{100}.%M %L - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <!-- Logger para Netty menos verboso, aunque no recomiendo activarlo en caso de querer depurar -->
    <!-- <logger name="io.netty" level="WARN"/> -->

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>